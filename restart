#!/bin/bash

S1=$1
S2=$2
P=$3

docker stop freeradius-eduroam; docker rm freeradius-eduroam
docker run -d --name freeradius-eduroam -v /var/log/freeradius-eduroam:/var/log/freeradius -v /etc/localtime:/etc/localtime:ro -p 1812:1812/udp -p 1813:1813/udp \
  -e EDUROAM_SERVER_1="$S1" -e EDUROAM_SERVER_2="$2" -e EDUROAM_PASSWORD="$P"  \
  jnucc/xeap-freeradius3
